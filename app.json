{
  "expo": {
    "name": "DocConnect Pro",
    "slug": "docconnect-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "docconnectpro",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3AAFA9"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ajstart9.docconnectpro"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash-logo.png",
        "backgroundColor": "#3AAFA9"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.ajstart9.docconnectpro"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/app-icon.png",
          "imageWidth": 250,
          "resizeMode": "contain",
          "backgroundColor": "#3AAFA9"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "c8cc2a5d-9d3f-477d-b19a-34030ea09b07"
      }
    }
  }
}
